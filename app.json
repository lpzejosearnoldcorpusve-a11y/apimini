{
  "expo": {
    "name": "mini-app",
    "slug": "mini-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/android-icon-foreground.png",
    "scheme": "miniapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    
    
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.axeluria79.miniapp",
      "buildNumber": "1",
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSExceptionDomains": {
            "nominatim.openstreetmap.org": {
              "NSIncludesSubdomains": true,
              "NSTemporaryExceptionAllowsInsecureHTTPLoads": true,
              "NSTemporaryExceptionMinimumTLSVersion": "TLSv1.1"
            },
            "openstreetmap.org": {
              "NSIncludesSubdomains": true,
              "NSTemporaryExceptionAllowsInsecureHTTPLoads": true
            }
          }
        },
        "NSLocationWhenInUseUsageDescription": "Esta aplicación necesita acceder a tu ubicación para proporcionar direcciones y servicios de búsqueda",
        "NSLocationAlwaysUsageDescription": "Esta aplicación necesita acceder a tu ubicación para funcionar correctamente",
        "NFCReaderUsageDescription": "Esta aplicación necesita acceso a NFC para leer tarjetas de transporte",
        "UIBackgroundModes": ["location"]
      },
      "entitlements": {
        "com.apple.developer.nfc.readersession.formats": ["TAG", "NDEF"]
      }
    },
    
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundColor": "#E6F4FE"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.axeluria79.miniapp",
      "versionCode": 1,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.NFC"
      ]
    },
    
    "web": {
      "output": "static",
      "favicon": "./assets/images/android-icon-foreground.png",
      "bundler": "metro"
    },
    
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Esta app necesita acceso a tu ubicación en todo momento para funcionar correctamente.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.1",
            "useFrameworks": "static"
          },
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "minSdkVersion": 26,  
            "buildToolsVersion": "35.0.0",
            "enableProguardInReleaseBuilds": false,
            "extraMavenRepos": ["https://jitpack.io"]
          }
        }
      ],
      "expo-web-browser",
      "react-native-nfc-manager"
    ],
    
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true,
      "tsconfigPaths": true
    },
    
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "b9904e8e-6db7-4e4d-83a3-23eb266b4c95"
      }
    },
    
    "owner": "axeluria79",
    "updates": {
      "url": "https://u.expo.dev/b9904e8e-6db7-4e4d-83a3-23eb266b4c95",
      "fallbackToCacheTimeout": 3000
    },
    
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}